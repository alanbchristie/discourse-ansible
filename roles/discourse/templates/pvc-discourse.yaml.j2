---
kind: PersistentVolumeClaim
apiVersion: v1
metadata:
  name: discourse
  namespace: {{ d_namespace }}
spec:
  accessModes:
  - ReadWriteOnce
{% if d_vol_storageclass != ' ' %}
  storageClassName: '{{ d_vol_storageclass }}'
{% endif %}
  resources:
    requests:
      storage: '{{ d_vol_size_g }}Gi'
